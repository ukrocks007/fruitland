# Database Configuration
# For development, SQLite is used. For production, switch to PostgreSQL
DATABASE_URL="file:./dev.db"
# Example PostgreSQL URL:
# DATABASE_URL="postgresql://user:password@localhost:5432/fruitland"

# NextAuth Configuration
# URL where your app is hosted
NEXTAUTH_URL="http://localhost:3000"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Razorpay Configuration
# Get your keys from https://dashboard.razorpay.com/app/keys
# For development, use Test Mode keys
# For production, use Live Mode keys
NEXT_PUBLIC_RAZORPAY_KEY_ID="your_razorpay_test_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_test_key_secret"

# Application Configuration
NEXT_PUBLIC_APP_NAME="Fruitland"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Email Configuration (for future implementation)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-specific-password"
