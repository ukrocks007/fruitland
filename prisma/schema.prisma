// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tenant model for multi-tenancy
model Tenant {
  id                String   @id @default(cuid())
  name              String
  slug              String   @unique
  description       String?
  logo              String?
  contactEmail      String?
  contactPhone      String?
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  users                  User[]
  memberships            UserTenant[]
  products               Product[]
  orders                 Order[]
  subscriptions          Subscription[]
  subscriptionPackages   SubscriptionPackage[]
  addresses              Address[]
  cartItems              CartItem[]
  warehouses             Warehouse[]
  loyaltyTransactions    LoyaltyTransaction[]
  reviews                Review[]

  @@index([slug])
  @@index([isActive])
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?
  role          String    @default("CUSTOMER") // CUSTOMER, ADMIN, DELIVERY_PARTNER, or SUPERADMIN
  tenantId      String?   // Nullable for SUPERADMIN users
  pointsBalance Int       @default(0) // Loyalty points balance
  loyaltyTier   String    @default("BASIC") // BASIC, SILVER, GOLD
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  tenant           Tenant?  @relation(fields: [tenantId], references: [id])
  memberships      UserTenant[]
  accounts         Account[]
  sessions         Session[]
  orders           Order[]
  subscriptions    Subscription[]
  addresses        Address[]
  cartItems        CartItem[]
  customerNotes    CustomerNote[] @relation("CustomerNotes")
  createdNotes     CustomerNote[] @relation("CreatedNotes")
  assignedOrders   Order[]        @relation("DeliveryPartner")
  loyaltyTransactions   LoyaltyTransaction[]
  processedRefunds Refund[]       @relation("RefundProcessedBy")
  reviews          Review[]

  @@index([role])
  @@index([tenantId])
}

// Many-to-many membership between User and Tenant
model UserTenant {
  userId   String
  tenantId String
  role     String   @default("CUSTOMER")
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([userId, tenantId])
  @@index([tenantId])
  @@index([userId])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Address model
model Address {
  id         String   @id @default(cuid())
  userId     String
  tenantId   String
  name       String
  phone      String
  addressLine1 String
  addressLine2 String?
  city       String
  state      String
  pincode    String
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant       Tenant         @relation(fields: [tenantId], references: [id])
  orders       Order[]
  subscriptions Subscription[]

  @@index([tenantId])
  @@index([userId, tenantId])
}

// Product model
model Product {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  description String
  price       Float
  image       String
  category    String   // fresh, seasonal, organic, exotic
  stock       Int      @default(0)
  isAvailable Boolean  @default(true)
  isSeasonal  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant             Tenant              @relation(fields: [tenantId], references: [id])
  orderItems         OrderItem[]
  subscriptionItems  SubscriptionItem[]
  cartItems          CartItem[]
  productStocks      ProductStock[]
  reviews            Review[]
  inventoryForecasts InventoryForecast[]

  @@index([tenantId])
  @@index([tenantId, stock, isAvailable])
  @@index([tenantId, category])
}

// Inventory Forecast model for demand prediction
model InventoryForecast {
  id                    String   @id @default(cuid())
  productId             String
  forecastDate          DateTime // Date for which forecast is valid
  expectedQuantity      Int      // Forecasted demand quantity
  recommendedReorderQty Int      // Suggested reorder quantity
  createdAt             DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([forecastDate])
  @@index([productId, forecastDate])
}

// Order model
model Order {
  id                 String      @id @default(cuid())
  userId             String
  tenantId           String
  addressId          String
  orderNumber        String      @unique
  totalAmount        Float
  pointsRedeemed     Int         @default(0) // Loyalty points redeemed for this order
  pointsDiscount     Float       @default(0) // Discount amount from points
  pointsEarned       Int         @default(0) // Points earned from this order
  status             String      @default("PENDING") // PENDING, PROCESSING, SHIPPED, OUT_FOR_DELIVERY, DELIVERED, CANCELLED
  paymentMethod      String      @default("ONLINE") // ONLINE, COD
  paymentStatus      String      @default("PENDING") // PENDING, PAID, FAILED, REFUNDED
  razorpayOrderId    String?
  razorpayPaymentId  String?
  razorpaySignature  String?
  subscriptionId     String?
  notes              String?
  deliveryPartnerId  String?
  deliveryNotes      String?
  warehouseId        String?
  // Bulk order fields
  isBulkOrder          Boolean  @default(false)
  bulkCustomerName     String?  // Company or customer name
  bulkCustomerContact  String?  // Phone or email
  bulkCustomerGST      String?  // GST or business identifier (optional)
  bulkDiscountPercent  Float?   // Discount percentage applied
  bulkOrderNote        String?  // Additional notes for bulk order
  bulkOrderStatus      String?  // PENDING_APPROVAL, APPROVED, REJECTED, INVOICE_GENERATED
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant              Tenant        @relation(fields: [tenantId], references: [id])
  address             Address       @relation(fields: [addressId], references: [id])
  subscription        Subscription? @relation(fields: [subscriptionId], references: [id])
  deliveryPartner     User?         @relation("DeliveryPartner", fields: [deliveryPartnerId], references: [id])
  warehouse           Warehouse?    @relation(fields: [warehouseId], references: [id])
  items               OrderItem[]
  loyaltyTransactions LoyaltyTransaction[]
  refunds             Refund[]

  @@index([tenantId])
  @@index([tenantId, createdAt])
  @@index([tenantId, paymentStatus])
  @@index([tenantId, status])
  @@index([tenantId, userId])
  @@index([createdAt, paymentStatus])
  @@index([deliveryPartnerId])
  @@index([isBulkOrder])
  @@index([warehouseId])
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
}

// Subscription Package model - Admin defined packages
model SubscriptionPackage {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  description String?
  frequency   String // DAILY, WEEKLY, MONTHLY
  price       Float
  imageUrl    String?
  features    String // JSON array of features
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant        Tenant         @relation(fields: [tenantId], references: [id])
  subscriptions Subscription[]

  @@index([tenantId])
  @@index([tenantId, isActive])
}

// Subscription model
model Subscription {
  id                String             @id @default(cuid())
  userId            String
  tenantId          String
  addressId         String
  packageId         String?
  subscriptionNumber String           @unique
  frequency         String // WEEKLY, BIWEEKLY, MONTHLY
  preference        String // MIXED, SEASONAL, CUSTOM
  quantity          Int                @default(1)
  totalAmount       Float
  status            String             @default("ACTIVE") // ACTIVE, PAUSED, CANCELLED
  startDate         DateTime           @default(now())
  nextDeliveryDate  DateTime
  pausedUntil       DateTime?
  cancelledAt       DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  user    User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant  Tenant                 @relation(fields: [tenantId], references: [id])
  address Address                @relation(fields: [addressId], references: [id])
  package SubscriptionPackage?   @relation(fields: [packageId], references: [id])
  items   SubscriptionItem[]
  orders  Order[]
  skips   SubscriptionSkip[]

  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, userId])
  @@index([status, createdAt])
}

model SubscriptionItem {
  id             String   @id @default(cuid())
  subscriptionId String
  productId      String
  quantity       Int
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  product      Product      @relation(fields: [productId], references: [id])
}

model SubscriptionSkip {
  id             String   @id @default(cuid())
  subscriptionId String
  skipDate       DateTime
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
}

// Cart model
model CartItem {
  id        String   @id @default(cuid())
  userId    String
  tenantId  String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant  Tenant  @relation(fields: [tenantId], references: [id])
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, tenantId])
  @@index([tenantId])
  @@index([userId, tenantId])
}

// Config model for dynamic settings
model Config {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("string") // string, boolean, number, json
  category  String   @default("general") // general, payment, email, etc
  label     String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Customer notes for CRM
model CustomerNote {
  id        String   @id @default(cuid())
  userId    String
  note      String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User @relation("CustomerNotes", fields: [userId], references: [id], onDelete: Cascade)
  creator   User @relation("CreatedNotes", fields: [createdBy], references: [id])
}

// Analytics cache for performance optimization
model AnalyticsCache {
  id        String   @id @default(cuid())
  key       String   @unique // e.g., "dashboard_analytics"
  data      String   // JSON data
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
  @@index([expiresAt])
}

// Warehouse model for multi-warehouse inventory
model Warehouse {
  id            String   @id @default(cuid())
  tenantId      String
  name          String
  city          String
  pincode       String
  zone          String?
  contactName   String?
  contactPhone  String?
  contactEmail  String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant        Tenant         @relation(fields: [tenantId], references: [id])
  productStocks ProductStock[]
  orders        Order[]

  @@index([tenantId])
  @@index([tenantId, city])
  @@index([tenantId, pincode])
  @@index([tenantId, zone])
  @@index([tenantId, isActive])
}

// ProductStock model for tracking stock per warehouse
model ProductStock {
  id               String   @id @default(cuid())
  warehouseId      String
  productId        String
  quantity         Int      @default(0)
  reservedQuantity Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  warehouse Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([warehouseId, productId])
  @@index([warehouseId])
  @@index([productId])
  @@index([quantity])
}

// Loyalty Transaction model for tracking points earned/redeemed
model LoyaltyTransaction {
  id          String   @id @default(cuid())
  userId      String
  tenantId    String
  orderId     String?
  type        String   // EARN or REDEEM
  points      Int      // Number of points (positive for earn, positive for redeem as it tracks absolute value)
  description String   // Description of transaction
  createdAt   DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant  @relation(fields: [tenantId], references: [id])
  order  Order?  @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([tenantId, userId])
  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

model Refund {
  id               String   @id @default(uuid())
  orderId          String
  refundAmount     Float
  refundReason     String
  status           String   @default("REQUESTED") // REQUESTED, APPROVED, REJECTED, COMPLETED, FAILED
  refundMethod     String   // ONLINE, COD
  razorpayRefundId String?
  processedBy      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  order            Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  processedByUser  User?    @relation("RefundProcessedBy", fields: [processedBy], references: [id])

  @@index([orderId])
  @@index([status])
  @@index([createdAt])
}

// Review status enum
enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

// Customer review model
model Review {
  id              String       @id @default(uuid())
  productId       String
  userId          String
  tenantId        String
  rating          Int          // 1-5 stars
  title           String?
  comment         String
  verifiedPurchase Boolean     @default(false)
  status          ReviewStatus @default(PENDING)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant  Tenant  @relation(fields: [tenantId], references: [id])

  @@unique([productId, userId, tenantId]) // Prevent duplicate reviews per tenant
  @@index([tenantId])
  @@index([tenantId, productId, status])
  @@index([userId])
  @@index([status])
}

